{% extends 'base.html.twig' %}

{% block title %}Conference Guestbook{% endblock %}

{% block body %}
    <h2>Give your feedback!</h2>

    {% for conference in conferences %}
        <div style="border: 1px solid #e0e0e0; border-radius: 8px; padding: 1.5rem; margin-bottom: 1rem; background-color: #fafafa;">
            <h4 style="margin-top: 0; margin-bottom: 0.75rem;">{{ conference }}</h4>
            <a href="{{ path('conference', { slug: conference.slug }) }}" style="display: inline-block; padding: 0.5rem 1rem; background-color: #0066cc; color: white; border-radius: 4px; text-decoration: none;">View Comments</a>
        </div>
    {% endfor %}
{% endblock %}
